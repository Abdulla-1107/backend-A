generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Product {
  id          String      @id @default(uuid())
  name_uz     String
  name_ru     String
  name_en     String
  amount      Int
  price       Int
  describtion String
  has_manual  Boolean     @default(true)
  size        Int
  color_uz    String
  color_ru    String
  color_en    String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  xususiyats  Xususiyat[]
  orderItems  OrderItem[]
  materials   Material[]
}

model Xususiyat {
  id String @id @default(uuid())

  name_uz   String
  name_ru   String
  name_en   String
  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model Material {
  id String @id @default(uuid())

  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  name_uz   String
  name_ru   String
  name_en   String
}

model Order {
  id String @id @default(uuid())

  fullName    String
  phoneNumber String
  location    String
  oferta      Boolean     @default(false)
  totalPrice  Int
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  orderItems  OrderItem[]
}

model OrderItem {
  id        String @id @default(uuid())
  productId String

  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  quantity  Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Contact {
  id        String   @id @default(uuid())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
